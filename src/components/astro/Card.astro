---
import { Image } from 'astro:assets';
interface Props {
	title: string;
	image: string;
	href: string;
}

const { href, title, image } = Astro.props;
---

<a href={href}>
	<Image
		src={image}
		alt={title}
		width="64"
		height="64"
		transition:name={`img-${title}`}
	/>
	<h3 class="text-2xl font-bold">{title}</h3>
</a>

<style>
	code {
		color: #fff;
	}
</style>