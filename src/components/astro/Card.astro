---
import {Image} from 'astro:assets';
interface Props {
    title: string;
    image: string;
    href: string;
    tags: string[];
}

const {title, image, href, tags} = Astro.props;
---
<article class="w-10/12 md:w-[45%] lg:w-[30%] lg:mb-4 flex flex-col items-center justify-center mt-4 p-4 space-y-4 bg-white rounded-lg shadow-lg">
    <a href={href}>
        <Image
			src={image}
			alt={title}
			width={64}
			height={64}
			className="w-full h-auto"
        />
        <h3 class="text-black text-xl font-bold">{title}</h3>
        <p class="text-gray-500 my-1">23 Junio</p>
        <div class="flex flex-wrap">
            {tags.map((tag) => (
                    <span class="text-xs inline-flex items-center font-bold leading-sm uppercase mx-0.5 mt-0.5 px-3 py-1 rounded-full bg-white text-gray-700 border">{tag}</span>
            ))}
        </div>
    </a>
</article>
