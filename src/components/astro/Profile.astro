---
import {Image} from "astro:assets";
import {Icon} from "astro-icon";
---

<div class="flex flex-col items-center pt-6 px-5 lg:w-1/2 lg:h-1/2">
    <Image
        src="/images/aitor-profile.webp"
        alt="Aitor Santana"
        width={64}
        height={64}
        class="rounded-full w-48 h-48 mx-auto md:w-64 md:h-64 md:mx-0 lg:w-96 lg:h-96 lg:mx-auto"
    />
    <div class="w-1/3 flex justify-between md:w-1/4 md: mt-7">
        <a href="https://github.com/Sstark97" aria-label="Github">
            <Icon name="icon-park:github" class="w-6 h-6 inline-block fill-primary md:w-8 md:h-8 hover:opacity-80" />
        </a>
        <a href="https://www.linkedin.com/in/aitorscinfo/" aria-label="Linkedin">
            <Icon name="mdi:linkedin" class="w-6 h-6 inline-block text-primary md:w-8 md:h-8 hover:opacity-80" />
        </a>
        <a href="https://www.twitter.com/aitorsci" aria-label="Twitter">
            <Icon name="mdi:twitter" class="w-6 h-6 inline-block text-primary md:w-8 md:h-8 hover:opacity-80" />
        </a>
    </div>
</div>