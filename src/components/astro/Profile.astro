---
import {Image} from "astro:assets";
import {Icon} from "astro-icon";
---

<div class="flex flex-col items-center pt-6 px-5">
    <Image
        src="/images/aitor-profile.webp"
        alt="Aitor Santana"
        width={64}
        height={64}
        class="rounded-full w-48 h-48 mx-auto"
    />
    <div class="w-1/3 flex justify-between mt-5">
        <a href="https://github.com/Sstark97">
            <Icon name="icon-park:github" class="w-6 h-6 inline-block fill-primary" />
        </a>
        <a href="https://www.linkedin.com/in/aitorscinfo/">
            <Icon name="mdi:linkedin" class="w-6 h-6 inline-block text-primary" />
        </a>
        <a href="https://www.twitter.com/aitorsci">
            <Icon name="mdi:twitter" class="w-6 h-6 inline-block text-primary" />
        </a>
    </div>
</div>