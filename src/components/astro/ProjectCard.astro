---
import {Image} from 'astro:assets';
import {Icon} from "astro-icon";
interface Props {
    title: string;
    image: string;
    href: string;
    repository: string;
    demo: string;
    date: Date;
}

function formatDate(date: Date) {
    const year = new Intl.DateTimeFormat('en', { year: 'numeric' }).format(date);
    const month = new Intl.DateTimeFormat('en', { month: '2-digit' }).format(date);
    const day = new Intl.DateTimeFormat('en', { day: '2-digit' }).format(date);
    return `${day}/${month}/${year}`;
}

const {title, image, href, repository, date, demo} = Astro.props;
---

<article class="w-10/12 md:w-[45%] lg:w-[30%] lg:hover:scale-105 lg:ease-in-out lg:duration-300 flex flex-col items-center justify-center mt-4 p-4 space-y-4 bg-fourth rounded-lg shadow-2xl">
    <a href={href}>
        <Image
            src={image}
            alt={title}
            width={64}
            height={64}
            class="w-36 h-36 max-w-36 object-cover mb-3"
        />
        <h3 class= "text-xl text-center font-bold">{title}</h3>
        <p class="text-gray-300 font-semibold text-center text-opacity-75 my-1">{formatDate(date)}</p>
    </a>
    <div class="w-1/3 flex justify-evenly mt-5 md:w-1/4 md:mt-7">
        <a href={repository} aria-label="Github">
            <Icon name="icon-park:github" class="w-6 h-6 md:mr-3 lg:w-[1.4rem] lg:h-[1.4rem] inline-block fill-primary md:w-8 md:h-8 hover:opacity-40" />
        </a>
        <a href={demo}>
            <Icon name="octicon:link-16" class="w-6 h-6 lg:w-[1.4rem] lg:h-[1.4rem] inline-block text-primary md:w-8 md:h-8 hover:opacity-40" />
        </a>
    </div>
</article>