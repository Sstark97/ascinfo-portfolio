{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strictNullChecks": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@application/*": ["lib/application/*"],
      "@infrastructure/*": ["lib/infrastructure/*"],
        "@domain/*": ["lib/domain/*"],
    }
  }
}